    "jsdom": "^27.0.1",
    "lefthook": "^2.0.1",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
